FROM nginx:1.19.0-alpine

COPY ./nginx/default.conf /etc/nginx/conf.d/default.conf
RUN openssl req -x509 -nodes -newkey rsa:2048 -keyout /etc/nginx/certs/server.key -out /etc/nginx/certs/server.crt -days 365

CMD ["nginx", "-g", "daemon off;"]

